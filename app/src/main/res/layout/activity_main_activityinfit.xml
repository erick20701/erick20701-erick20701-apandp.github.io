<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blgr"
    tools:context=".MainActivityinfit">
    <ImageView
        android:id="@+id/infmbgr"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"

        android:background="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/infmface"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"

        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mb1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/infmname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:text="Bùi Quang Trường"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/infmface"
        app:layout_constraintTop_toTopOf="@+id/infmbgr" />
    <TextView
        android:id="@+id/infmclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:textSize="14dp"
        android:text="D19CQCN10-B"
        app:layout_constraintStart_toEndOf="@+id/infmface"
        app:layout_constraintTop_toBottomOf="@+id/infmname" />
    <TextView
        android:id="@+id/infmlike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="3dp"
        android:textSize="13dp"
        android:text="Sở Thích: Xem phim "
        app:layout_constraintStart_toEndOf="@+id/infmface"
        app:layout_constraintTop_toBottomOf="@+id/infmclass" />
    <TextView
        android:id="@+id/infmnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="3dp"
        android:textSize="13dp"
        android:text="Châm Ngôn Yêu Thích: Vận may và tình yêu dành cho người can đảm."
        app:layout_constraintStart_toEndOf="@+id/infmface"
        app:layout_constraintTop_toBottomOf="@+id/infmlike" />
    <TextView
        android:id="@+id/infmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:text="Bùi Quang Trường"
        android:textSize="20dp"

        app:layout_constraintTop_toBottomOf="@+id/infmbgr" />
</android.support.constraint.ConstraintLayout>